<h2>My tasks</h2>
<ul>
  <% @tasks.each do |task| %>
    <input class="form-check-input" type="checkbox" id="checkboxNoLabel" value="" aria-label="...">
    <li><%= link_to(task.title.capitalize, task_path(task.id)) %> <%= link_to "❌ ", task_path(task), 
      method: :delete, data: { confirm: "Delete #{task.title}?" } %>
    </li>
  <% end %>
</ul>
<p><%= link_to('+ Add a new task', new_task_path) %></p>

